# Database
DATABASE_URL=postgresql+asyncpg://agentpm:localdev@localhost:5432/agentpm
POSTGRES_DB=agentpm
POSTGRES_USER=agentpm
POSTGRES_PASSWORD=localdev

# Redis
REDIS_URL=redis://localhost:6379

# LLM Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Vector Store
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=agentpm-docs

# Langfuse Observability
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# CORS (for local development)
CORS_ORIGINS=["http://localhost:3000"]

# Token Limits
MAX_TOKENS_PER_CYCLE=2000
MAX_CONVERSATION_TOKENS=50000

# Agent Configuration
PRIMARY_LLM_MODEL=claude-3-opus-20240229
FALLBACK_LLM_MODELS=["gpt-4-turbo", "claude-3-sonnet-20240229"]

# Document Storage
DOCUMENTS_PATH=./generated_docs